            <EditText
                android:id="@+id/shelter_latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Exact Latitude"
                android:inputType="numberSigned|numberDecimal" />

